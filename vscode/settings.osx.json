{
    "editor.fontSize": 15,
    "editor.renderWhitespace": "boundary",
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.formatOnPaste": true,
    "editor.minimap.enabled": false,
    "editor.cursorBlinking": "solid",
    "terminal.external.osxExec": "iTerm.app",
    "editor.wordWrap": "on",
    "terminal.integrated.scrollback": 5000,
    "search.smartCase": true,
    "files.insertFinalNewline": true,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/bundle": true
    },
    "workbench.startupEditor": "newUntitledFile",
    "window.zoomLevel": 0,
    "window.title": "${rootName}${separator}${rootPath} ${activeEditorShort}",
    "window.newWindowDimensions": "maximized",
    // Vim
    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.insertModeKeyBindings": [
        {
            "before": [
                "j",
                "j"
            ],
            "after": [
                "<Esc>"
            ]
        }
    ],
    "vim.otherModesKeyBindingsNonRecursive": [
        {
            "before": [
                "j"
            ],
            "after": [
                "g",
                "j"
            ]
        },
        {
            "before": [
                "k"
            ],
            "after": [
                "g",
                "k"
            ]
        },
        {
            "before": [
                "<leader>",
                "d"
            ],
            "after": [
                "d",
                "d"
            ]
        },
        {
            "before": [
                "<C-n>"
            ],
            "after": [],
            "commands": [
                {
                    "command": ":nohl"
                }
            ]
        },
        // https://qiita.com/carnelia0702/items/a2c9f9932ec469b46acb
        {
            "before": [
                "u"
            ],
            "after": [],
            "commands": [
                {
                    "command": "undo"
                }
            ]
        },
        {
            "before": [
                "<C-r>"
            ],
            "after": [],
            "commands": [
                {
                    "command": "redo"
                }
            ]
        },
        {
            "before": [
                ";",
            ],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.showCommands",
                    "args": []
                }
            ]
        },
    ],
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-f>": false
    },
    // Go
    "go.gopath": "/Users/y_uuki/go",
    "go.goroot": "/opt/homebrew/opt/go/libexec",
    "go.formatTool": "goimports",
    // Japanese
    // https: //www.off-soft.net/ja/software/develop2/japanese-problem-with-visual-studio-code.html
    "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?、。「」（）；：・？＜＞＋－＊／｛｝｜～＆％＄＃”！’　にをはがのとも",
    "vim.iskeyword": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?、。「」（）；：・？＜＞＋－＊／｛｝｜～＆％＄＃”！’　にをはがのとも",
    "extensions.ignoreRecommendations": false,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "files.watcherExclude": {
        "**/local/**": true
    },
    "files.eol": "\n",
    "[markdown]": {
        "editor.quickSuggestions": true
    },
}
